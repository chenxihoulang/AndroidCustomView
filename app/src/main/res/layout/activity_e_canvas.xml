<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#2871D3"
        android:layout_height="match_parent"
        tools:context=".f_activity.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

        <org.chw.androidcustomview.e_canvas.E1CanvasCropView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <org.chw.androidcustomview.MyTextView
                app:text="画布裁剪"
                style="@style/MyText"/>

        <org.chw.androidcustomview.e_canvas.E2CanvasMultiSaveView
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <org.chw.androidcustomview.MyTextView
                app:text="多次保存"
                style="@style/MyText"/>

        <org.chw.androidcustomview.e_canvas.E3CircleImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

        <org.chw.androidcustomview.MyTextView
                app:text="圆形头像"
                style="@style/MyText"/>

        <org.chw.androidcustomview.e_canvas.E4XfermodeImageView
                android:layout_width="120dp"
                android:layout_height="150dp"/>

        <org.chw.androidcustomview.MyTextView
                app:text="混合模式"
                style="@style/MyText"/>


    </LinearLayout>


</ScrollView>